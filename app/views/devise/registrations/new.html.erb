<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign Up</h5>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signin') do |f| %>
            <div class="form-label-group">
              <%= f.label :email, id: 'inputEmail' %>
              <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email', required: true %>
            </div>

            <div class="form-label-group">
              <%= f.label :password, id: 'inputPassword' %><br/>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
            </div>

            <div class="form-label-group">
              <%= f.label :password_confirmation, id: 'inputPassword' %><br/>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password', required: true %>
            </div>

            <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
            <hr class="my-4">
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Forgot password?</h5>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form-sign-in', html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-label-group">
              <%= f.label :email, id: 'inputEmail' %>
              <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email', required: true %>
            </div>

            <%= f.submit "Get reset password instructions", class: "btn btn-lg btn-primary btn-block" %>
            <hr class="my-4">
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

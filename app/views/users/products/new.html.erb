<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Create new product</h5>
          <%= form_for(@product, url: users_products_path, method: :post, class: "form-signin") do |f| %>

            <div class="form-label-group">
              <%= f.label :name %><br/>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>

            <div class="form-label-group">
              <%= f.label :min_price %><br/>
              <%= f.text_field :min_price, class: 'form-control', required: true %>
            </div>

            <div class="form-label-group">
              <%= f.label :image, 'Image URL' %><br/>
              <%= f.text_field :image, class: 'form-control' %>
            </div>

            <div class="form-label-group">
              <%= f.label :description %><br/>
              <%= f.text_area :description, class: 'form-control', required: true %>
            </div>
            <%= f.submit "Create new product", class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

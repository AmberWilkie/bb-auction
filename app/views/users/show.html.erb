<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-9 col-lg-12 mx-auto">
      <div class="card card-signin my-5 padding-s">
        <h1 class="my-4"><%= @user.name %> Store
          <small>Buy some stuff!</small>
        </h1>

        <% @user.products.each do |product| %>
          <div class="row">
            <div class="col-md-7">
                <img class="img-fluid rounded mb-3 mb-md-0" src=<%= product.image %> alt="">
              <% unless product.current_bid %><h4 class="image-overlay">No one has bid yet!</h4><% end %>
            </div>
            <div class="col-md-5">
              <h3><%= product.name.titleize %></h3>
              <p><%= product.description %></p>
              <% if product.current_bid %><h4>Current bid: <%= product.current_bid %></h4><% end %>
              <a class="btn btn-primary" href="#">Bid!</a>
            </div>
          </div>

          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>

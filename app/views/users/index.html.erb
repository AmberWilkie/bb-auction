<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="list-group">
          <% @users.each do |user| %>
            <%= link_to user_path(user), class: "list-group-item list-group-item-action" do %>
              <%= user.name %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
